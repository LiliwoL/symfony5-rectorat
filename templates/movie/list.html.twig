{% extends 'base.html.twig' %}

{# Surcharge du bloc title #}
{% block title %}Liste des films{% endblock %}


{% block body %}

    {# Affichage d'une valeur avec dump#}
    {{ dump(movies) }}


    {# Affichage en liste #}
    <ul>
        {% for movie in movies %}
            <li>
                {{ movie.id }} -- {{ movie.title }}
                <br>
                <img src="{{ movie.poster }}" />
            </li>
        {% endfor %}
    </ul>
{% endblock %}
